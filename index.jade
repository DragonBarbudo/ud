                  li Frameworks Web
                  li Aplicaciones móviles
                  li Modelado 3D
                  li Animación 2D
                  li Animación 3D
                  li Edición de video
                  li Efectos especiales
                  li HTML
                  li CSS
                  li Javascript
                  li PHP
                  li Python
                  li Less
    section#blogLatest
      .container
        .col12
          h2 Últimas entradas del blog
      .container
        | {% for post in site.posts offset: 0 limit: 4  %}
        .col3.col-t6.col-m6: a(href="{{ site.url }}{{ post.url }}").post
          h3 {{ post.title }}
          p {{ post.description }}
        | {% endfor %} 

    +footer
    +scripts
